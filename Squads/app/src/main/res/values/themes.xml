<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Squads" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_green_normal</item>
        <item name="colorPrimaryVariant">@color/custom_green_dark</item>
        <item name="colorOnPrimary">@color/soft_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_yellow_normal</item>
        <item name="colorSecondaryVariant">@color/custom_yellow_dark</item>
        <item name="colorOnSecondary">@color/soft_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/custom_green_dark</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Squads.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Squads.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Squads.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>